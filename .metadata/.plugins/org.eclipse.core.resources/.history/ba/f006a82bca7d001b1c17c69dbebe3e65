package corte1;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		/*
		 * Corte 1
		 * 
		 * Métricas de software
		 * 
		 * Autores: JUAN CAMILO MAMIAN RUIZ, ALDEMAR BERNAL HERNANDEZ
