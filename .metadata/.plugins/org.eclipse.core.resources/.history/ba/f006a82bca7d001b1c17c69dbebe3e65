		 * */

		// VARIABLES PARA MEDIR EL TIEMPO
		long inicio, fin, resultado;
		
		// MENSAJE EN PANTALLA
		System.out.println("*************************************************************************************************************************************");
		System.out.println("* Programa que retorna cúantos " + "pares hay en un arreglo de tamaño n, por ejemplo, a y b, que sumados estos dos dan un número que es  * \n"
				+ "* divisible por el número preguntado por pantalla. Por ejemplo, un arreglo de [1,2,3,4,5,6], y el                                   *\n"
				+ "* número preguntado es 5, entonces las pares son [1,4] = 5, [2,3] = 5, [4,6]= 10, el resultado de                                   *\n"
				+ "* la suma de los pares dan un número que es divisible con el número preguntado en pantalla.                                         *");
		System.out.println("*************************************************************************************************************************************");

		// ENTRADA DEL TECLADO
		Scanner entradaTeclado = new Scanner(System.in);

		// GUARDA EL NÚMERO PREGUNTADO
		System.out.print("Ingresa el número divisible: ");
		int numDivisible = entradaTeclado.nextInt();
		System.out.println();
		System.out.print("Ingresa el tamaño del arreglo: ");
		int longitudArr = entradaTeclado.nextInt();

		// DECLARAR EL ARREGLO
		int arreglo[] = new int[longitudArr];

		// LLENAR EL ARREGLO
		for (int i = 0; i < longitudArr; i++) {
			arreglo[i] = i + 1;
		}

		/*
		 * //IMPRIMIR EL ARREGLO for (int i = 0; i < arreglo.length; i++) { if(i == 0)
		 * System.out.print("[ "); if(i <= longitudArr - 2) System.out.print(" " +
		 * arreglo[i] + " ,"); if(i == longitudArr - 1) System.out.print("  " +(i + 1) +
		 * " ]"); }
		 */

		System.out.println("");

		// MÉTODO 1
		inicio = System.currentTimeMillis();
		
		Metodo1_Sum_DivisiblesPares metodo1 = new Metodo1_Sum_DivisiblesPares();
		int resultado1 = metodo1.sumaDivisiblePares(longitudArr, numDivisible, arreglo);
		fin = System.currentTimeMillis();
		resultado = fin - inicio;
		System.out.println("Método 1.");
		System.out.println("La cantidad de pares que sumados son divisibles de " + numDivisible + " son: " + resultado1);
		System.out.println("Tiempo ejecutando: " + resultado + "ms.");

		// REINICIO DE VARIABLES
		inicio = fin = resultado = 0;

		// MÉTODO 2
		inicio = System.currentTimeMillis();
		Metodo2_Sum_DivisiblesPares metodo2 = new Metodo2_Sum_DivisiblesPares();
		int resultado2 = metodo2.sumaDivisiblePares(numDivisible, arreglo);
		fin = System.currentTimeMillis();
		resultado = fin - inicio;
		System.out.println("Método 2.");
		System.out.println("La cantidad de pares que sumados son divisibles d " + numDivisible + " son: " + resultado2);
		System.out.println("Tiempo ejecutando: " + resultado + "ms.");

	}

}
